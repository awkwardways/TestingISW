@model PROYECTOISW.Models.ViewModel.PerfilViewModel.CambiarTelefonoViewModel

<h1 class="text-black">Cambiar Telefono</h1>
<form asp-action="CambiarTelefono" asp-controller="Usuario" method="post">
    <!--Obtener el id del usuario-->
    <input asp-for="Id" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-5">
        <label asp-for="Contraseña" class="form-label"></label>
        <input asp-for="Contraseña" class="form-control" placeholder="Ingresar Contraseña" type="password" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
    <div class="mb-5">
        <label asp-for="NuevoTelefono" class="form-label"></label>
        <input asp-for="NuevoTelefono" class="form-control" placeholder="Nuevo Telefono" type="tel" />
        <span asp-validation-for="NuevoTelefono" class="text-danger"></span>
    </div>
    <div class="mb-5">
        <button type="submit" class="btn btn-warning">Cambiar</button>
    </div>
</form>
<!-- Mensaje de error -->
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewBag.Error
    </div>
}
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
